
CREATE TABLE suratmasuk
(
  Id_suratmasuk INT          NOT NULL AUTO_INCREMENT COMMENT 'auto increment',
  no_agenda     CHAR(25)     NULL    ,
  no_surat      CHAR(100)    NULL    ,
  tanggal_masuk DATE         NULL    ,
  tanggal_surat DATE         NULL    ,
  jenis_surat   VARCHAR(15)  NULL    ,
  nama          VARCHAR(100) NULL    ,
  jabatan       VARCHAR(100) NULL    ,
  instansi      VARCHAR(255) NULL    ,
  perihal       VARCHAR(255) NULL    ,
  nama_file     VARCHAR(255) NULL    ,
  PRIMARY KEY (Id_suratmasuk)
) COMMENT 'Untuk Data Surat Masuk';

CREATE TABLE suratkeluar
(
  id_suratkeluar   INT          NOT NULL AUTO_INCREMENT COMMENT 'auto increment',
  no_surat         CHAR(50)     NULL    ,
  tanggal_surat    DATE         NULL    ,
  kepengurusan     CHAR(20)     NULL    ,
  nama_pengirim    VARCHAR(100) NULL    ,
  jabatan_pengirim VARCHAR(100) NULL    ,
  nama_tujuan      VARCHAR(100) NULL    ,
  jabatan_tujuan   VARCHAR(100) NULL    ,
  instansi_tujuan  VARCHAR(255) NULL    ,
  perihal          VARCHAR(255) NULL    ,
  nama_file        VARCHAR(250) NULL    ,
  PRIMARY KEY (id_suratkeluar)
) COMMENT 'Untuk Data Surat Keluar';

CREATE TABLE bagian
(
  id_bagian   INT          NOT NULL AUTO_INCREMENT,
  nama_bagian VARCHAR(100) NULL    ,
  PRIMARY KEY (id_bagian)
);

CREATE TABLE kegiatan
(
  id_kegiatan               INT          NOT NULL,
  nama_kegaitan             VARCHAR(255) NULL    ,
  penyelenggara_kegiatan    VARCHAR(255) NULL    ,
  tanggal_mulai_kegiatan    DATE         NULL    ,
  tanggal_berakhir_kegiatan DATE         NULL    ,
  lampiran                  VARCHAR(255) NULL    ,
  PRIMARY KEY (id_kegiatan)
);


CREATE TABLE karyawan
(
  id_karyawan INT          NOT NULL AUTO_INCREMENT COMMENT 'auto increment',
  id_bagian   INT          NULL    ,
  nama        VARCHAR(100) NULL    ,
  jabatan     VARCHAR(50)  NULL    ,
  alamat      TEXT         NULL    ,
  no_telp     CHAR(14)     NULL    ,
  email       CHAR(100)    NULL    ,
  foto        CHAR(255)    NULL    ,
  PRIMARY KEY (id_karyawan), FOREIGN KEY (id_bagian) REFERENCES bagian(id_bagian)
);

CREATE TABLE user
(
  id_user     VARCHAR(100) NOT NULL,
  id_karyawan INT          NULL     COMMENT 'auto increment',
  password    VARCHAR(255) NULL    ,
  PRIMARY KEY (id_user), FOREIGN KEY (id_karyawan) REFERENCES karyawan(id_karyawan)
) COMMENT 'untuk login';

CREATE TABLE pengiriman
(
  id_pengiriman  INT NOT NULL AUTO_INCREMENT COMMENT 'auto increment',
  id_suratkeluar INT NULL     COMMENT 'auto increment',
  id_karyawan    INT NULL     COMMENT 'auto increment',
  nama_penerima  VARCHAR(50)    NULL    ,
  tanggal_kirim  DATE   NULL    ,
  PRIMARY KEY (id_pengiriman), FOREIGN KEY (id_suratkeluar) REFERENCES suratkeluar(id_suratkeluar), FOREIGN KEY (id_karyawan) REFERENCES karyawan(id_karyawan)
);


CREATE TABLE tanggapan
(
  id_tanggapan    INT          NOT NULL,
  id_user         VARCHAR(100) NULL    ,
  id_suratmasuk   INT          NULL    ,
  tanggapan       TEXT         NULL    ,
  waktu_tanggapan DATE         NULL    ,
  PRIMARY KEY (id_tanggapan), FOREIGN KEY (id_user) REFERENCES user(id_user), FOREIGN KEY (id_suratmasuk) REFERENCES suratmasuk(id_suratmasuk)
);



